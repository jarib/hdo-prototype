<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Navn</th>
      <th>Underkategorier</th>
    </tr>
  </thead>
  <tbody>
      <% @topics.each do |topic| 
        next unless topic.main?
      %>
      <tr>
        <td><%= topic.external_id %></td>
        <td><%= topic.name %></td>
        <td>
          <% topic.children.each do |sub_topic| %>
          <ul class="unstyled">
            <li><%= sub_topic.external_id %>: <%= sub_topic.name %></li>
          </ul>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>